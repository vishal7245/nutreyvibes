generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DietPlan {
  id        String      @id @default(cuid())
  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  createdBy Admin       @relation(fields: [adminId], references: [id])
  adminId   String
  meals     DietMeal[]
}

model DietMeal {
  id         String       @id @default(cuid())
  name       String
  time       String
  comment    String?  
  dietPlan   DietPlan    @relation(fields: [dietPlanId], references: [id], onDelete: Cascade)
  dietPlanId String
  items      MealItem[]
}

model MealItem {
  id         String   @id @default(cuid())
  quantity   Float
  unit       String
  food       Food     @relation(fields: [foodId], references: [id], onDelete: Cascade)
  foodId     String
  meal       DietMeal @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId     String
}

model Food {
  id            String   @id @default(cuid())
  name          String
  alternateName String?
  protein       Float
  carbs         Float
  fat           Float
  fiber         Float
  calories      Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  createdBy     Admin    @relation(fields: [adminId], references: [id])
  adminId       String
  mealItems     MealItem[]
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  foods     Food[]
  dietPlans DietPlan[]
}